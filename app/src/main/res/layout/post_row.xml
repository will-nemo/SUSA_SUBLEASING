<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    android:layout_margin="7dp"
    android:elevation="120dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/relativeLayout"
            android:layout_toRightOf="@+id/relativeLayout"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/post_image2"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/post_image3"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/post_image3"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:background="#f7f7f6">

        </RelativeLayout>

        <TextView
            android:id="@+id/post_dollar"
            android:layout_width="20dp"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/post_address"
            android:text="  $"
            android:textColor="#0b0b0b"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/post_id"
            android:layout_width="395dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/post_image"
            android:layout_marginStart="0dp"
            android:layout_marginTop="7dp"
            android:text="Price"
            android:textColor="#0b0b0b"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/post_address"
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/post_id"
            android:text="Address"
            android:textColor="#0b0b0b"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/post_location"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="21dp"
            android:layout_marginStart="5dp"
            android:text="Location"
            android:textColor="#0b0b0b"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/post_share"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="11dp"
            android:layout_toEndOf="@+id/relativeLayout"
            android:layout_toRightOf="@+id/relativeLayout"
            android:clickable="true"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/post_details"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/post_share"
            android:layout_alignBottom="@+id/post_share"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/post_contact"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/post_details"
            android:layout_alignBottom="@+id/post_details"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1dp"
            android:clickable="true"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/likes"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/post_dollar"
            android:layout_marginEnd="128dp"
            android:src="@drawable/ic_action_likes"
            android:visibility="gone"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/likes_num"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/post_id"
            android:layout_below="@+id/post_dollar"
            android:text="0"
            android:visibility="gone"
            tools:ignore="RtlCompat" />


    </RelativeLayout>

</android.support.v7.widget.CardView>