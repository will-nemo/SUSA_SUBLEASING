<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    android:layout_margin="7dp"
    android:elevation="120dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/relativeLayout"
            android:layout_toRightOf="@+id/relativeLayout"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/post_image2"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/post_image3"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/post_image3"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:background="#f7f7f6">

        </RelativeLayout>

        <TextView
            android:id="@+id/post_dollar"
            android:layout_width="20dp"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/post_address"
            android:text="  $"
            android:textColor="#0b0b0b"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/post_address"
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/post_id"
            android:text="Address"
            android:textColor="#0b0b0b"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/post_id"
            android:layout_width="389dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/post_image"
            android:layout_marginStart="6dp"
            android:layout_marginTop="7dp"
            android:text="Price"
            android:textColor="#0b0b0b"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/post_location"
            android:layout_width="191dp"
            android:layout_height="wrap_content"

            android:layout_alignEnd="@+id/post_image"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:text="Location"
            android:textColor="#0b0b0b"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/post_availability"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/post_location"
            android:text="Availability"
            android:textColor="#0b0b0b"
            android:textSize="15dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>